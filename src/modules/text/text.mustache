{{#content}}

        <!-- TEXT BLOCK -->
        <div class="Section Text{{#primary}} Text--primary{{/primary}}{{#color}} Section--{{.}}{{/color}}{{#margin}} Section--{{.}}{{/margin}}{{#center}} Section--center{{/center}}">
            <div class="Section-Inner Text-Inner{{#width}} Text-Inner--{{.}}{{/width}}">

                <div class="Text-Main Rte">

                    {{{html}}}

                </div>

                {{# expandedText }}
                <div class="Text-Expanded Rte"
                    data-js-toggle
                    data-toggle-button="#textExpand123456"
                    data-toggle-height
                    data-toggle-init-closed>

                    {{{ expandedTextHtml }}}

                </div>
                {{/ expandedText }}

            </div>
            {{# expandedText.button }}
            <div class="Btn-Bar Text-Buttons" id="textExpand123456">
                <button type="button" class="Btn Btn--bar {{class}} Text-Buttons-Btn">
                    <span class="Text-Buttons-Btn-Open">
                        {{ TextOpen }}
                        <svg viewBox="0 0 512 512" class="Icon Text-Buttons-Btn-Icon">
                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#chevron-down"></use>
                        </svg>
                    </span>
                    <span class="Text-Buttons-Btn-Close">
                        {{ TextClose }}
                        <svg viewBox="0 0 512 512" class="Icon Text-Buttons-Btn-Icon">
                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#chevron-up"></use>
                        </svg>
                    </span>
                </button>
            </div>
            {{/ expandedText.button }}
        </div>
{{/content}}